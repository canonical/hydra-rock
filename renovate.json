{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":automergeDigest",
    ":automergePatch",
    ":automergeMinor",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "helpers:pinGitHubActionDigests"
  ],
  "automergeType": "pr",
  "rebaseWhen": "behind-base-branch",
  "automerge": true,
  "additionalBranchPrefix": "auto-"
}